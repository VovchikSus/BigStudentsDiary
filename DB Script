create table TimeTable
(
    IdLecturer   uniqueidentifier,
    Date         date,
    GroupCode    uniqueidentifier,
    NumberLesson nchar(10),
    Discipline   nchar(10),
    IdStudent    uniqueidentifier,
    Floor        nchar(10)
)
go

create table TimeTable
(
    dayDate       date,
    Number        nvarchar(255),
    DisciplineID  int
        constraint FK_TimeTable_Disciplines
            references Disciplines,
    FloorID       int
        constraint FK_TimeTable_Floors
            references Floors,
    dayOfWeekName varchar(255),
    TimeStart     time,
    TimeEnd       time,
    TimeRange     varchar(255),
    isSession     bit,
    GroupID       int
        constraint FK_TimeTable_Groups
            references Groups,
    BuildingID    int
        constraint FK_TimeTable_Buildings
            references Buildings,
    TeacherID     int
        constraint FK_TimeTable_Teachers
            references Teachers,
    RoomID        int
        constraint FK_TimeTable_Rooms
            references Rooms,
    DepartmentID  int
        constraint FK_TimeTable_Departments
            references Departments,
    SemesterID    int
        constraint FK_TimeTable_Semestrs
            references Semestrs,
    TypeID        int
        constraint FK_TimeTable_Types
            references Types
)
go






